{
  "name": "x-server",
  "version": "1.0.0",
  "description": "A micro-service of MetaDocKit",
  "author": "Walter Devia <wdevia@darumasoftware.com>",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "start-dev": "run-script-os",
    "start-dev:win32": "set \"READ_ENV_FILE=true\" && npm run serve",
    "start-dev:linux": "READ_ENV_FILE=true npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run tslint && npm run build-ts",
    "build-ts": "npm run copy-non-ts-files && \"./node_modules/.bin/tsc\" -p ./tsconfig.json",
    "copy-non-ts-files": "./node_modules/.bin/ts-node --project tsconfig.json copyNonTsFiles.ts",
    "watch-node": "./node_modules/.bin/nodemon -e js,gql,json,ts,env dist/server.js",
    "watch-ts": "npm run copy-non-ts-files && \"./node_modules/.bin/tsc\" -w -p ./tsconfig.json",
    "watch": "npm run copy-non-ts-files && \"./node_modules/.bin/concurrently\" -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-dev": "run-script-os",
    "watch-dev:win32": "set \"READ_ENV_FILE=true\" && npm run watch",
    "watch-dev:linux": "READ_ENV_FILE=true npm run watch",
    "tslint": "./node_modules/.bin/tslint -c tslint.json -p tsconfig.json",
    "seed": "cd seeds && \"../node_modules/.bin/seed\" --seeds-folder data",
    "typedoc": "typedoc --ignoreCompilerErrors --logger console --name WorkFlowServer --readme ./README.md --excludeExternals --tsconfig ./tsconfig.json --out ./docs"
  },
  "_moduleAliases": {
    "@app": "dist"
  },
  "dependencies": {
    "@types/mongoose-paginate": "^5.0.6",
    "apollo-server-express": "^2.4.0",
    "cryptorjs": "^3.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.4",
    "express-validator": "^4.3.0",
    "graphql": "^14.1.1",
    "mdk-services-interface": "git+https://service-interface-token:_x_uZPtPeyFezbSWzt-x@gitlab.metadockit.com/root/MDKServicesInterface.git",
    "merge-graphql-schemas": "^1.5.3",
    "module-alias": "^2.1.0",
    "moment": "^2.22.2",
    "mongoose": "^5.3.2",
    "mongoose-paginate": "^5.0.3",
    "node-mongo-seeds-atlas": "^1.0.1",
    "run-script-os": "^1.0.5",
    "shelljs": "^0.8.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^24.0.5",
    "@types/mongodb": "^3.1.19",
    "@types/mongoose": "^5.3.17",
    "@types/node": "^11.9.4",
    "@types/shelljs": "^0.8.3",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "axios": "^0.18.0",
    "concurrently": "^4.1.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3"
  }
}
